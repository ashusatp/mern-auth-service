{
    "name": "mernstack-auth-service",
    "version": "1.0.0",
    "description": "user management service",
    "main": "index.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=dev nodemon src/server.ts",
        "start": "node src/server.js",
        "format:fix": "prettier . --write",
        "format:check": "prettier . --check",
        "lint:fix": "eslint . --fix",
        "lint:check": "eslint .",
        "test": "jest --watch --runInBand",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:generate": "npm run typeorm migration:generate -- -d src/config/data-source.ts",
        "migration:run": "npm run typeorm migration:run -- -d src/config/data-source.ts",
        "migration:revert": "npm run typeorm migration:revert -- -d src/config/data-source.ts",
        "migration:create": "sh -c 'npm run typeorm migration:create -- src/migrations/$1' --",
        "db:create": "chmod +x scripts/create-db.sh && ./scripts/create-db.sh",
        "db:drop": "chmod +x scripts/drop-db.sh && ./scripts/drop-db.sh",
        "prepare": "husky"
    },
    "author": "Ashutosh S <ashudev0987@gmail.com>",
    "license": "ISC",
    "devDependencies": {
        "@eslint/js": "^9.13.0",
        "@types/eslint__js": "^8.42.3",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.13",
        "@types/node": "^22.7.6",
        "@types/supertest": "^6.0.2",
        "cross-env": "^7.0.3",
        "eslint": "^9.13.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^16.1.2",
        "nodemon": "^3.1.7",
        "prettier": "3.6.2",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.10.0"
    },
    "dependencies": {
        "bcryptjs": "^3.0.2",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "http-errors": "^2.0.0",
        "pg": "^8.16.3",
        "reflect-metadata": "^0.2.2",
        "typeorm": "^0.3.25",
        "winston": "^3.15.0",
        "@types/cors": "^2.8.17",
        "@types/jsonwebtoken": "^9.0.5",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.1",
        "cors": "^2.8.5",
        "jsonwebtoken": "^9.0.2"
    },
    "lint-staged": {
        "*.ts": [
            "npm run format:fix",
            "npm run lint:fix"
        ]
    }
}
